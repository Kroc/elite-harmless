{
    //"editor.renderWhitespace": "boundary",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.rulers": [
        80
    ],
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80,
    },
    "ca65.cl65.target": "c64",
    "csharp.suppressDotnetInstallWarning": true,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.startAutomatically": false,
    "files.exclude": {
        "**/*.o": true,
        "**/*.s": true,
        "**/*.prg": true,
        "**/*.d64": true,
        "**/*.g64": true,
        "**/*.bin": true,
        "**/*.crt": true,
    },
    "search.exclude": {
        // don't search the auto-generated files
        "**/*.map": true,
        "**/*.ll": true,
        "bin": true,
        "build": true,
        "release": true,
    },
    "[cc65]": {
        "editor.tabSize": 8,
        "editor.detectIndentation": false,
        "editor.wordWrap": "off"
    },
    "terminal.integrated.shell.windows": "C:\\Windows\\sysnative\\bash.exe",
    "python.linting.enabled": false,
    // the TODO-tree extension is recommended for finding the TODOs scattered in the code
    "todo-tree.excludeGlobs": [
        // exclude any source that might be in our 3rd-party binaries folder
        "bin",
        // these folders contain generated content
        "build",
        "release"
    ],
    "todo-tree.filtering.excludeGlobs": [
        "bin",
        "build",
        "release"
    ],
}